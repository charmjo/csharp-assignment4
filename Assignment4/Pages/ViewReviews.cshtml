@page
@model ViewReviews
@{
    ViewData["Title"] = $"Review List";
}
<h1>@ViewData["Title"]</h1>
<p>Her are the most recently posted reviews.</p>


@* 
    This page will display the review last saved to the .json file
*@

@if (Model.reviewList != null){
@foreach (Review review in Model.reviewList) {
    <div class="mt-3">
         <div class="card bg-secondary bg-gradient text-white p-3">  
            <div class="book-info pt-4 pb-3">
                <div class="container pb-2">
                    <div class="row">
                        <p class="col-4 fw-bold">Book Title: </p>
                        <p class="col-8">@review.bookInfo.title</p>
                    </div>
                </div>
                <div class="container pb-2">
                    <div class="row">
                        <p class="col-4 fw-bold">Author: </p>
                        <p class="col-8">@review.bookInfo.author</p>
                    </div>
                </div>
                <div class="container pb-2">
                    <div class="row">
                        <p class="col-4 fw-bold">Genre: </p>
                        <p class="col-8">@review.bookInfo.genre</p>
                    </div>
                </div>
                <div class="container pb-2">
                    <div class="row">
                        <p class="col-4 fw-bold">Year Published: </p>
                        <p class="col-8">@review.bookInfo.pubYear</p>
                    </div>
                </div>
            </div>
            <div class="review pt-3 pb-4">
                <div class="container pb-2">
                    <div class="row">
                        <p class="col-4 fw-bold">Reviewer: </p>
                        <p class="col-8">@review.reviewerInfo.name</p>
                    </div>
                </div>
                <div class="container pb-2">
                    <div class="row">
                        <p class="col-4 fw-bold">Rated this book: </p>
                        <p class="col-8">@review.reviewerInfo.rating stars</p>
                    </div>
                </div>
                <div class="container pb-2">
                    <p class="mb-1 fw-bold">Description :</p>
                    <p>@review.reviewerInfo.reviewDescription</p>
                </div>
            </div>
        </div>
    </div> 
    }
} else {
    <div class="alert alert-danger" role="alert">
        Sorry there are no reviews yet. Why not write one yourself?
    </div>
}
    <div class="container">
        <div class="d-flex flex-row justify-content-center">
            <p class="p-3">
                <a class="btn btn-primary btn-lg" asp-page="/SubmitReview" role="button">Submit Another Review</a>
            </p>
            <p class="p-3">
                <a class="btn btn-secondary btn-lg" asp-page="/Index" role="button">Home</a>
            </p>
        </div>
    </div>

